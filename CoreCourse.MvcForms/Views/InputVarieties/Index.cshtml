@model InputsVm
@{
    ViewData["Title"] = "Input Varieties";
}

@section Scripts{
    <script type="text/javascript">
        $(function () {
            var resolution = screen.width + ' x ' + screen.height;
            $('#@(Html.IdFor(m => m.ScreenResolution))').val(resolution);
        });
    </script>
}

<div class="row">
    <div class="col-md-12">
        <h2>Input Varieties</h2>
        <div>
            <p>This page shows different ways to use &lt;input&gt; Tag Helpers.</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="InputVarieties" asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Url">Enter URL:</label>
                <input asp-for="Url" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Enter a phone number:</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FavoriteInt"></label>
                <input asp-for="FavoriteInt" min="0" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PI">Enter PI with 2 decimals:</label>
                <input asp-format="{0:N2}" asp-for="PI" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EnteredDateAndTime">Enter a date and time:</label>
                <input asp-format="{0:dd/MM/yyyy HH:mm}" asp-for="EnteredDateAndTime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EnteredDate">Enter a date:</label>
                <input asp-for="EnteredDate" min="1981-01-07T00:00" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EnteredTime">Enter a time:</label>
                <input asp-for="EnteredTime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription">Write something here:</label>
                <textarea asp-for="ShortDescription" class="form-control"></textarea>
            </div>
            <div class="checkbox">
                <label><input asp-for="ShowSummary" /> Check this box to view summary</label>
            </div>
            <div class="form-group">
                <p>Privacy notice: Your screen resolution will be sent to the server.</p>
                <input asp-for="ScreenResolution" />
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>



